<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/gradient_lab"
    android:elevation="10dp"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="3dp"
    tools:layout_editor_absoluteY="26dp">


    <TextView
        android:id="@+id/textView_time"
        android:layout_width="94dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="8:00\n9:30"
        android:textAlignment="gravity"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:text="Методы распознавания образов"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_teacher"
        android:layout_width="290dp"
        android:layout_height="21dp"
        android:layout_marginTop="2dp"
        android:text="проф. Мясников В. В."
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_spot"
        android:layout_width="290dp"
        android:layout_height="20dp"
        android:layout_marginTop="6dp"
        android:text="608-н.к."
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/textView_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_teacher" />

</android.support.constraint.ConstraintLayout>